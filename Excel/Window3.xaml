<Window x:Class="Wiring.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wiring"
        mc:Ignorable="d"
        Title="Podaj numer setu:" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="280" Height="28" FontSize="16"><Run Text="Wpisz komentarz"/><Run Language="pl-pl" Text="/uwagę"/></TextBlock>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" Height="60" FontSize="12" KeyDown="textBox_KeyDown_1"/>
        <Button Content="Potwierdź komentarz lub kliknij Enter" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Bottom" Width="280" Click="Button_Click" Height="36" Margin="0,0,0,10"/>

    </Grid>
</Window>
